<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgperson"
                android:layout_width="123dp"
                android:layout_height="128dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="148dp"
                android:text="Lulu Doe"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgperson" />

            <TextView
                android:id="@+id/tvComment"
                android:layout_width="229dp"
                android:layout_height="60dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:text="Africa is made of 56 Nations"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <ImageView
                android:id="@+id/imgRetweet"
                android:layout_width="38dp"
                android:layout_height="41dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgLike"
                app:layout_constraintTop_toTopOf="@+id/imgLike"
                app:srcCompat="@drawable/img"
                tools:layout_editor_absoluteX="193dp" />

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="42dp"
                android:layout_height="38dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgComment"
                app:layout_constraintTop_toTopOf="@+id/imgComment"
                app:srcCompat="@drawable/img_1"
                tools:layout_editor_absoluteX="111dp" />

            <ImageView
                android:id="@+id/imgComment"
                android:layout_width="44dp"
                android:layout_height="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgperson"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/img_2"
                tools:layout_editor_absoluteX="16dp" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="45dp"
                android:layout_height="39dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgRetweet"
                app:layout_constraintTop_toTopOf="@+id/imgRetweet"
                app:srcCompat="@drawable/img_3"
                tools:layout_editor_absoluteX="273dp" />

            <TextView
                android:id="@+id/tvnumber"
                android:layout_width="26dp"
                android:layout_height="19dp"
                android:text="20"
                app:layout_constraintBottom_toBottomOf="@+id/imgComment"
                app:layout_constraintTop_toTopOf="@+id/imgComment"
                tools:layout_editor_absoluteX="74dp" />

            <TextView
                android:id="@+id/tvnumbertwo"
                android:layout_width="17dp"
                android:layout_height="25dp"
                android:text="200"
                app:layout_constraintBottom_toBottomOf="@+id/imgLike"
                app:layout_constraintTop_toTopOf="@+id/imgLike"
                tools:layout_editor_absoluteX="167dp" />

            <TextView
                android:id="@+id/tvnumberthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                app:layout_constraintBottom_toBottomOf="@+id/imgRetweet"
                app:layout_constraintTop_toTopOf="@+id/imgRetweet"
                tools:layout_editor_absoluteX="240dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>